{
  "name": "clip",
  "productName": "Clip It",
  "version": "1.0.0",
  "description": "Desktop helper app for text formatting with AI",
  "main": "main.js",
  "build": {
    "appId": "com.clip.app",
    "productName": "Clip It",
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"pnpm run dev:vite\" \"wait-on http://localhost:1234 && electron .\"",
    "dev:vite": "vite",
    "build": "vite build",
    "build:electron": "pnpm run build && electron-builder",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "react",
    "text-formatting"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "openai": "^6.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.0",
    "electron": "^39.2.6",
    "electron-builder": "^24.6.4",
    "lucide-react": "^0.561.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.7",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
